<article class="property">
    <a href="#">
        {% if logement.image %}
        <img src="{{ asset('build/images/' ~ logement.image) }}" alt="{{ logement.description }}">
        {% else %}
        <div class="text-center mt-5">
        <i class="fa fa-5x fa-home"></i>
        </div>
        {% endif %}
        <footer class="overlay">
            <div class="info">
                <div class="tag">{{ logement.prix }}</div>
                <h3>{{ logement.quartier.libelle }}</h3>
            </div>
            <div class="more-info">
                <div class="property-info">
                    <i class="fa fa-calendar"></i>
                    {{ logement.dateCreation|date("d/m/Y") }}
                </div>
                <div class="property-info">
                    <i class="fa fa-tag"></i>
                    {{ logement.type.libelle }}
                </div>
                <div class="property-info">
                    <i class="fa fa-expand"></i>
                    {{ logement.surface }}
                </div>
                <div class="property-info">
                    <i class="fa fa-bed"></i>
                    {{ logement.nbChambres }}
                </div>
            </div>
        </footer>
    </a>
</article>
