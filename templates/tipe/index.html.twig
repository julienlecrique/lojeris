{% extends 'base.html.twig' %}

{% block title %}Tipe index{% endblock %}

{% block body %}
    <h1>Tipe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tipe in tipes %}
            <tr>
                <td>{{ tipe.id }}</td>
                <td>{{ tipe.libelle }}</td>
                <td>
                    <a href="{{ path('tipe_show', {'id': tipe.id}) }}">show</a>
                    <a href="{{ path('tipe_edit', {'id': tipe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tipe_new') }}">Create new</a>
{% endblock %}
